<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewTaskFragment" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Nombre Vendedor"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/spiTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView11"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Cedula Vendedor:"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/edtccVendedor"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="Cedula Vendedor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView12"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Fecha Venta"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/edtFechaVta"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Fecha Venta"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView13"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Nombre Cliente"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/edtNomCliente"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombre Cliente"
            android:textSize="12sp" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="Cedula Cliente"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/edtccCliente"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="10"
        android:hint="Cedula Cliente"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="Direcion Cliente"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/edtDirCliente"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="10"
        android:hint="Direccion Cliente"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="Latutud"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtLatidud"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="10"
        android:hint="Latitud"
        android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="Longitud"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtLongitud"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="10"
        android:hint="Longitud"
        android:textSize="12sp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="Codigo Cortina"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtCodigoCortina"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="10"
        android:hint="Codigo Cortina"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="Alto Cortina"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtAltoCotina"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="10"
        android:hint="Alto Cortina"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="Largo Cortina"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtLargoCortina"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="10"
        android:hint="Largo Cortina"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="#eee"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="Valor Venta"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtValorVenta"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="10"
        android:hint="Valor Venta"
        android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnNewTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textSize="15sp" />



</LinearLayout>